---
import { LIBRARY_PAGE_INFO } from "@/global/pagesInfo";

import MainLayout from "@layouts/MainLayout.astro";
import { libraryKeywords } from "@/features/library/seo/library.keywords";

import BookPage from "@/features/books/components/BookPage.astro";
import PagesSEO from "@/seo/PagesSEO.astro";
---

<MainLayout>
  <PagesSEO
    slot="head"
    pageTitle={LIBRARY_PAGE_INFO.title}
    pageDescription={LIBRARY_PAGE_INFO.description}
    pageKeywords={libraryKeywords}
  />
  <BookPage />
</MainLayout>
