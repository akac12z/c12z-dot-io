---
import "../styles/global.css";

import { SITE_404_CONFIG } from "@/global/siteInfo";

import CourageError404Image from "@/assets/OpenGraph/404/og-404-error.png";

import Layout404Error from "@layouts/Layout404Error.astro";

import Page404 from "@/features/404/components/Page404.astro";
import Error404SEO from "@/seo/404/Error404SEO.astro";
---

<Layout404Error>
  <Error404SEO
    slot="head"
    pageTitle={SITE_404_CONFIG.errorTitle}
    pageDescription={SITE_404_CONFIG.errorDescription}
    pageThumbnail={CourageError404Image.src}
  />
  <Page404 />
</Layout404Error>
