---
import MainLayout from "@layouts/MainLayout.astro";
import GoBackInTop from "@sharedComponentsInPages/items/buttons/GoBackInTop.astro";

import { PROJECTS_PAGE } from "@/global/pagesInfo";
import { PROJETCS_DATA } from "@projectPageComponents/data/projectsData";

import ProjectPage from "@projectPageComponents/components/ProjectPage.astro";
import ProjectCard from "@projectPageComponents/components/ProjectCard.astro";
import PagesSEO from "@/components/common/seo/PagesSEO.astro";

import type { PageKeywords } from "@/interfaces/keywords.interface";

const projectsKeywords: PageKeywords = {
  keywords: ["proyectos", "proyectos c12z", "proyectos chema ferrandez"],
};

const { LVM_es } = PROJETCS_DATA;
---

<MainLayout>
  <PagesSEO
    slot="head"
    pageTitle={PROJECTS_PAGE.title}
    pageDescription={PROJECTS_PAGE.description}
    pageKeywords={projectsKeywords}
  />
  <GoBackInTop headPage="/" title="ir a la home" />
  <h1>Proyectos</h1>
  <ProjectPage>
    <ProjectCard
      href={LVM_es.href}
      srcImage={LVM_es.srcImage}
      altImage={LVM_es.altImage}
      projectDescription={LVM_es.projectDescription}
      projectTitle={LVM_es.projectTitle}
    />
  </ProjectPage>
</MainLayout>
