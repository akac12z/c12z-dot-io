---
import type { CollectionEntry } from "astro:content";

/* Este componente va enfocado a mostra el abstract del libro pero a su vez, 
estará optimizado para los LLMs y el archivo llms.txt.
En este archivo, se le muestran a los LLMs qué es lo que hace el sitio y además,
como no sabemos hasta que punto lo usan o cómo están funcionando, el incorporar esto es algo experimental.
*/

interface Props {
  entry: CollectionEntry<"library">;
}

const { entry } = Astro.props;
const { data } = entry;

const { abstract } = data;
---

<details
  class="max-w-2xl w-full sm:w-5/6 mx-auto border border-neutral-600 rounded-lg mb-8 group"
>
  <summary
    class="bg-neutral-900 py-2 px-4 cursor-pointer group-hover:bg-neutral-900 transition-colors list-none rounded-lg group-open:rounded-br-none group-open:rounded-bl-none"
  >
    <h2 class="mb-0 flex items-center justify-center gap-x-2">
      Spoiler
      <svg
        class="w-4 h-4 transition-transform group-open:rotate-180"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"></path>
      </svg>
    </h2>
  </summary>
  <section
    class="bg-neutral-900 py-2 px-4 border-t border-neutral-700 rounded-b-lg"
  >
    <p class="text-xs text-cz-text-content-dark">{abstract}</p>
  </section>
</details>
