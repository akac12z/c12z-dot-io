---
interface Props {
  headPage: string;
}

const { headPage } = Astro.props;

if (!headPage.startsWith("/")) {
  throw new Error(
    `Invalid href: "${headPage}". The href must start with a "/".`
  );
}
---

<a
  href={headPage}
  class="my-2 px-1 py-0.5 text-xs font-pixel tracking-widest border border-cz-orange-goback text-cz-text-content-dark rounded opacity-50 hover:opacity-100 flex items-center justify-center gap-1 w-fit h-fit mb-5"
>
  ← Atrás
</a>
